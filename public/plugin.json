{
  "pluginName": "KeePassXC",
  "author": "Trent0",
  "homepage": "https://github.com/trentlee0",
  "description": "通过 KeePassXC CLI 快速搜索 KeePass 数据库中的账号和密码并输入、生成密码",
  "version": "1.0.0",
  "logo": "logo.png",
  "preload": "preload.js",
  "features": [
    {
      "code": "keepass-search",
      "explain": "搜索 KeePassXC 中所有的账号",
      "cmds": [
        "KeePassXC Search",
        "KeePassXC 搜索",
        "搜索账号密码",
        {
          "type": "window",
          "label": "KeePassXC 搜索",
          "match": {
            "app": [
              "KeePassXC.exe",
              "KeePassXC.app"
            ]
          }
        }
      ]
    },
    {
      "code": "keepass-match",
      "explain": "搜索 KeePassXC 中当前网站的账号",
      "cmds": [
        {
          "type": "window",
          "label": "搜索当前网站的账号",
          "match": {
            "app": [
              "chrome.exe",
              "msedge.exe",
              "firefox.exe",
              "opera.exe",
              "brave.exe",
              "zen.exe",
              "Safari.app",
              "Google Chrome.app",
              "Microsoft Edge.app",
              "Firefox.app",
              "Opera.app",
              "Brave Browser.app",
              "Zen.app"
            ]
          }
        }
      ]
    },
    {
      "code": "keepass-generator",
      "explain": "使用 KeePassXC 生成密码",
      "cmds": [
        "KeePassXC Generator",
        "KeePassXC 密码生成器",
        "生成密码"
      ]
    },
    {
      "code": "keepass-entry",
      "explain": "使用 KeePassXC 添加账号",
      "cmds": [
        "KeePassXC Add Account",
        "KeePassXC 添加账号",
        "添加账号"
      ]
    },
    {
      "code": "keepass-setting",
      "explain": "KeePassXC 设置",
      "cmds": [
        "KeePassXC Setting",
        "KeePassXC 设置"
      ]
    }
  ]
}